<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="measureAndLayoutRepeatedly.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:measureAndLayoutRepeatedly"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Entry"
        ContentTemplate="{DataTemplate local:TestEntryPage}"
        Route="TestEntryPage" />
    <ShellContent
        Title="Editor"
        ContentTemplate="{DataTemplate local:TestEdiorPage}"
        Route="TestEdiorPage" />
    <ShellContent
        Title="Button"
        ContentTemplate="{DataTemplate local:TestButonPage}"
        Route="TestButonPage" />
</Shell>
